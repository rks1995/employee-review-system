
<div class="assign-task-container">
    <div class="left">
        <p class="assign-input-field">Assign To | <a href="/user/listdropdown" class="dropdown"><i class="fa-solid fa-caret-down assign-to"></i></a></p>
        <div class="list-users-to hide-dropdown">
            <ul>
                <% for(let i=0; i<locals.all_users.length; i++) {%> 
                    <% const {name} = locals.all_users[i] %>
                    <% if(locals.user.name !== name) { %>
                        <a href="/user/dashboard?name=<%= name %>">
                            <li class="list-name"><%= name %></li>
                        </a> 
                    <%}%>
                <%}%>
            </ul>
        </div>
    </div>
    <div class="right">
        <p class="assign-input-field">Assign For | <a href="/user/listdropdown" class="dropdown"><i
                    class="fa-solid fa-caret-down assign-for"></i></a></p>
        <div class="list-users-for hide-dropdown">
            <ul>
                <% for(let i=0; i<locals.all_users.length; i++) {%>
                    <% const {name} = locals.all_users[i] %>
                    <% if(locals.user.name !== name) { %>
                        <a href="/user/dashboard?name=<%= name %>">
                            <li class="list-name"><%= name %></li>
                        </a>
                    <%}%>
                <%}%>
            </ul>
        </div>
    </div>
    <button class="assign-btn">Assign</button>
</div>